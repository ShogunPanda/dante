{
  "name": "@perseveranza-pets/dante",
  "version": "0.45.0",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShogunPanda/dante.git"
  },
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "bin/dante",
    "create-dante-site": "bin/create-dante-site"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "swc --strip-leading-paths --delete-dir-on-start -D -s -w -d dist src",
    "build": "swc --strip-leading-paths --delete-dir-on-start -D -d dist src",
    "postbuild": "concurrently npm:lint npm:typecheck",
    "format": "prettier -w src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "typecheck": "tsc -p . --emitDeclarationOnly",
    "test": "exit 0",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@swc/cli": "^0.3.2",
    "@swc/core": "^1.3.106",
    "@unocss/core": "^0.58.4",
    "@unocss/preset-mini": "^0.58.4",
    "@unocss/transformer-directives": "^0.58.4",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fastify": "^4.25.2",
    "fastify-http-errors-enhanced": "^5.0.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "magic-string": "^0.30.5",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.33",
    "postcss-discard-comments": "^6.0.1",
    "postcss-import": "^16.0.0",
    "postcss-minify-selectors": "^6.0.2",
    "postcss-nested": "^6.0.1",
    "postcss-normalize-whitespace": "^6.0.1",
    "purgecss": "^5.0.0",
    "shiki": "1.0.0-beta.0"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^9.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.7",
    "@types/postcss-import": "^14.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">= 18.18.0"
  }
}
