{
  "name": "dante",
  "version": "0.9.0",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": "github:ShogunPanda/dante",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "dist/cli.js",
    "create-dante-site": "dist/create.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "predev": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist && npm run lint",
    "build": "swc -d dist src",
    "postbuild": "tsc -p . --emitDeclarationOnly",
    "format": "prettier -w src",
    "lint": "eslint --ext .ts,.tsx src",
    "ci": "npm run lint",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^6.11.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@unocss/core": "^0.56.5",
    "@unocss/transformer-directives": "^0.56.5",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "fastify": "^4.23.2",
    "fastify-http-errors-enhanced": "^4.2.0",
    "glob": "^10.3.10",
    "magic-string": "^0.30.4",
    "pino-pretty": "^10.2.3",
    "postcss": "^8.4.31",
    "postcss-discard-comments": "^6.0.0",
    "postcss-import": "^15.1.0",
    "postcss-minify-selectors": "^6.0.0",
    "postcss-nested": "^6.0.1",
    "postcss-normalize-whitespace": "^6.0.0",
    "purgecss": "^5.0.0",
    "rehype": "^13.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.9.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.8.3",
    "@types/postcss-import": "^14.0.1",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 18.18.0"
  }
}
