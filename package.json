{
  "name": "dante",
  "version": "0.26.1",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": "github:ShogunPanda/dante",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "bin/dante",
    "create-dante-site": "bin/create-dante-site"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js",
    "./html-utils": {
      "import": "./dist/lib/html-utils/html_utils.js",
      "types": "./dist/lib/html-utils/html_utils.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "predev": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist && npm run build:html-utils",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist && npm run build:html-utils",
    "build": "swc -d dist src",
    "build:html-utils": "cd lib/html-utils && make",
    "postbuild": "concurrently npm:lint npm:typecheck",
    "format": "prettier -w src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "typecheck": "tsc -p . --emitDeclarationOnly",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^6.11.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.94",
    "@unocss/core": "^0.57.0",
    "@unocss/transformer-directives": "^0.57.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fastify": "^4.24.3",
    "fastify-http-errors-enhanced": "^4.2.0",
    "glob": "^10.3.10",
    "magic-string": "^0.30.5",
    "pino-pretty": "^10.2.3",
    "postcss": "^8.4.31",
    "postcss-discard-comments": "^6.0.0",
    "postcss-import": "^15.1.0",
    "postcss-minify-selectors": "^6.0.0",
    "postcss-nested": "^6.0.1",
    "postcss-normalize-whitespace": "^6.0.0",
    "purgecss": "^5.0.0",
    "shiki": "^0.14.5"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.10.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.8.7",
    "@types/postcss-import": "^14.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 18.18.0"
  },
  "tap": {
    "extends": "./test/config/tap.yml"
  }
}
