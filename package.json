{
  "name": "dante",
  "version": "0.3.0",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": "github:ShogunPanda/dante",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "dist/cli.js",
    "create-dante-site": "dist/create.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "predev": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && mkdir dist && cp -a src/assets src/templates dist && npm run lint",
    "build": "swc -d dist src",
    "postbuild": "tsc -p . --emitDeclarationOnly",
    "format": "prettier -w src",
    "lint": "eslint src",
    "ci": "npm run lint",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^6.6.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "@unocss/core": "^0.47.5",
    "@unocss/transformer-directives": "^0.47.5",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "fastify": "^4.10.2",
    "fastify-http-errors-enhanced": "^4.1.0",
    "glob": "^10.2.2",
    "magic-string": "^0.27.0",
    "pino-pretty": "^9.1.1",
    "postcss": "^8.4.19",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^15.1.0",
    "postcss-minify-selectors": "^5.2.1",
    "postcss-nested": "^6.0.0",
    "postcss-normalize-whitespace": "^5.1.1",
    "purgecss": "^5.0.0",
    "rehype": "^12.0.1",
    "shiki": "^0.14.2",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.8.0",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.11",
    "@types/postcss-import": "^14.0.0",
    "eslint": "^8.39.0",
    "prettier": "^2.5.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
