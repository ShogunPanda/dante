{
  "name": "dante",
  "version": "0.31.0",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": "github:ShogunPanda/dante",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "bin/dante",
    "create-dante-site": "bin/create-dante-site"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "swc --delete-dir-on-start -D -s -w -d dist src",
    "build": "swc --delete-dir-on-start -D -d dist src",
    "postbuild": "concurrently npm:lint npm:typecheck",
    "format": "prettier -w src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "typecheck": "tsc -p . --emitDeclarationOnly",
    "test": "exit 0",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@unocss/core": "^0.58.0",
    "@unocss/transformer-directives": "^0.58.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fastify": "^4.25.1",
    "fastify-http-errors-enhanced": "^4.3.0",
    "glob": "^10.3.10",
    "magic-string": "^0.30.5",
    "pino-pretty": "^10.3.0",
    "postcss": "^8.4.32",
    "postcss-discard-comments": "^6.0.1",
    "postcss-import": "^15.1.0",
    "postcss-minify-selectors": "^6.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-normalize-whitespace": "^6.0.1",
    "purgecss": "^5.0.0",
    "shiki": "^0.14.7"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^9.0.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.10.5",
    "@types/postcss-import": "^14.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">= 18.18.0"
  },
  "tap": {
    "extends": "./test/config/tap.yml"
  }
}
