{
  "name": "@perseveranza-pets/dante",
  "version": "0.61.0",
  "description": "Opinionated static site generator.",
  "homepage": "https://sw.cowtech.it/dante",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShogunPanda/dante.git"
  },
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/dante/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "dante": "bin/dante",
    "create-dante-site": "bin/create-dante-site"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && cp -a src/assets src/templates dist && npm run lint",
    "format": "prettier -w src",
    "lint": "eslint --cache",
    "test": "exit 0",
    "ci": "npm run build && npm run test",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "commander": "^14.0.2",
    "fastify": "^5.6.2",
    "fastify-http-errors-enhanced": "^7.0.0",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "lightningcss": "^1.30.2",
    "oxc-transform": "^0.99.0",
    "pino-pretty": "^13.1.2",
    "postcss": "^8.5.6",
    "shiki": "3.15.0"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^11.0.0",
    "@cowtech/typescript-config": "^0.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">= 22.21.0"
  }
}
